@model TotemPWA.Models.Promotion

@{
    Layout = "_Admin";
    ViewData["Title"] = "Excluir Promoção";
}

<h1>Confirmar Exclusão</h1>

<div>
    <h4>Promoção de: <strong>@Model.Product?.Name</strong></h4>
    <p>Desconto: <strong>@Model.Percent%</strong></p>
    <p>Válida até: <strong>@Model.ValidUntil.ToString("dd/MM/yyyy")</strong></p>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="List" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
