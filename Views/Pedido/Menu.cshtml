@{
    ViewData["Title"] = "Menu";
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>

    <!-- HEADER -->
    <div class="header">
        <h1>Escolha seu Pedido</h1>
        <img src="https://via.placeholder.com/100" alt="Logo do Restaurante">
    </div>

    <!-- MENU COM ITENS -->
    <div class="menu-container">
        <div class="menu-item">
            <img src="https://via.placeholder.com/80" alt="Pizza">
            <div class="options">
                <h3>Pizza Margherita</h3>
                <p>Queijo, tomate e manjericão</p>
                <strong>R$ 35,00</strong>
            </div>
        </div>

        <div class="menu-item">
            <img src="https://via.placeholder.com/80" alt="Hamburguer">
            <div class="options">
                <h3>Hamburguer Artesanal</h3>
                <p>Pão, carne 200g, queijo e salada</p>
                <strong>R$ 28,00</strong>
            </div>
        </div>

        <div class="menu-item">
            <img src="https://via.placeholder.com/80" alt="Salada">
            <div class="options">
                <h3>Salada Caesar</h3>
                <p>Alface, frango, queijo parmesão e molho especial</p>
                <strong>R$ 22,00</strong>
            </div>
        </div>
    </div>

    <!-- FOOTER -->
    <div class="footer">
        <p>Total do Pedido: <strong>R$ 0,00</strong></p>
    </div>

</body>
</html>
